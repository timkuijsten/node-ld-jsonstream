{
  // Enforcing Options
  //"bitwise"       : true,
  "camelcase"     : true,
  "curly"         : true,
  "eqeqeq"        : true,
  "forin"         : true,
  "freeze"        : true,
  "immed"         : true,
  "indent"        : 2,
  "latedef"       : true,
  "newcap"        : true,
  "noarg"         : true,
  "noempty"       : true,
  "nonbsp"        : true,
  "nonew"         : true,
  //"plusplus"      : true,
  "quotmark"      : "single",
  "undef"         : true,
  "unused"        : true,
  "strict"        : true,
  "maxparams"     : 8,
  "maxdepth"      : 5,
  //"maxstatements" : 60,
  "maxcomplexity" : 12,

  // Relaxing Options
  //boss              : true,
  //eqnull            : true,
  "sub"           : true,

  // Environments
  "node"   : true,

  "predef" : [
    "before",
    "beforeEach",
    "after",
    "describe",
    "xdescribe",
    "it",
    "xit"
  ]
}
